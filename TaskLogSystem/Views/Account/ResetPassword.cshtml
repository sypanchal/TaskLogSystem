
@{
    ViewBag.Title = "ResetPassword";
}

@model TaskLogSystem.Models.Employee

@{
    var resetPasswordRequest = Session["ResetPasswordRequest"];
    var resetPasswordRequestBy = Session["ResetPasswordRequestBy"];
}


<div class="login-box">

    <div class="login-logo">
        <b>Reset Your Password</b>
    </div>

    <div class="login-box-body">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new
        {
            id = "ResetPasswordForm"
        }))
        {
            @Html.AntiForgeryToken()

            <div class="row">

                <div class="col-12 mb-3">
                    <div class="form-group">
                        <label class="form-label text-bold" for="email">Email</label>
                        @Html.TextBox("email", resetPasswordRequestBy, new { @class = "form-control mw-100", id = "email", placeholder = "example@abc.com", required = "required", @readonly = "readonly", style = "cursor: no-drop;" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-6 mb-3">
                    <div class="form-group">
                        <label class="form-label text-bold" for="password">Password</label>
                        @Html.Password("password", null, new { @class = "form-control", id = "password", placeholder = "••••••••", minlength = "8", required = "required" })
                    </div>
                </div>

                <div class="col-6 mb-3">
                    <div class="form-group">
                        <label class="form-label text-bold" for="confirmPassword">Confirm Password</label>
                        @Html.Password("confirmPassword", null, new { @class = "form-control", id = "confirmPassword", placeholder = "••••••••", minlength = "8", required = "required" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-4 offset-4 my-3">
                    <div class="form-group">
                        <button type="submit" name="submit" class="btn btn-primary btn-block btn-flat form-control">Reset Password</button>
                    </div>
                </div>

            </div>
        }
    </div>
</div>

